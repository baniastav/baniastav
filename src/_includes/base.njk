<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ site.description }}">
  <title>{{ site.name }} – {{ site.slogan }}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/animations.css">
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar" id="navbar">
    <div class="container navbar__inner">
      <a href="#hero" class="navbar__logo">{{ site.name }}</a>
      <button class="navbar__toggle" id="navToggle" aria-label="Otevřít menu" aria-expanded="false">
        <span class="navbar__toggle-bar"></span>
        <span class="navbar__toggle-bar"></span>
        <span class="navbar__toggle-bar"></span>
      </button>
      <ul class="navbar__menu" id="navMenu">
        <li><a href="#about" class="navbar__link">O nás</a></li>
        <li><a href="#services" class="navbar__link">Služby</a></li>
        <li><a href="#references" class="navbar__link">Reference</a></li>
        <li><a href="#contact" class="navbar__link navbar__link--cta">Kontakt</a></li>
      </ul>
    </div>
  </nav>

  {{ content | safe }}

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer__inner">
        <div class="footer__brand">
          <span class="footer__logo">{{ site.name }}</span>
          <p class="footer__tagline">{{ site.slogan }}</p>
        </div>
        <div class="footer__contact">
          <p><a href="tel:{{ site.phone | replace(' ', '') }}">{{ site.phone }}</a></p>
          <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
          <p>{{ site.address }}</p>
        </div>
        <div class="footer__copy">
          <p>&copy; {{ site.name }} {{ "" | date("Y") }}. Všechna práva vyhrazena.</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="/assets/js/main.js"></script>
  <script src="/assets/js/animations.js"></script>
  <script src="/assets/js/lightbox.js"></script>
</body>
</html>
