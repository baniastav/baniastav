        <line class="bp-draw" x1="310" y1="511" x2="365" y2="511"/>
        <line class="bp-draw" x1="310" y1="494" x2="365" y2="494"/>
        <line class="bp-draw" x1="310" y1="477" x2="365" y2="477"/>
        <line class="bp-draw" x1="310" y1="460" x2="365" y2="460"/>
        <line class="bp-draw" x1="310" y1="443" x2="365" y2="443"/>
        <line class="bp-draw" x1="310" y1="426" x2="365" y2="426"/>
        <line class="bp-draw" x1="310" y1="409" x2="365" y2="409"/>
