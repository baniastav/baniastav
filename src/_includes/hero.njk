        <line class="bp-draw-plan" x1="1000" y1="200" x2="1000" y2="390"/>

        <!-- Vertical walls bottom half -->
        <line class="bp-draw-plan" x1="830" y1="390" x2="830" y2="580"/>
        <line class="bp-draw-plan" x1="960" y1="400" x2="960" y2="580"/>
      </g>

      <!-- Room details (doors, furniture symbols) -->
      <g class="blueprint__plan-detail" stroke="rgba(242,140,40,0.2)" stroke-width="0.8" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <!-- Door top-left room (opens into room) -->
        <line class="bp-draw-plan" x1="830" y1="300" x2="830" y2="245" stroke="none"/>
        <line class="bp-draw-plan" x1="830" y1="245" x2="785" y2="245"/>
        <path class="bp-draw-plan" d="M830 300 A55 55 0 0 1 785 245"/>

        <!-- Door top-right room -->
        <line class="bp-draw-plan" x1="1000" y1="290" x2="1000" y2="235" stroke="none"/>
        <line class="bp-draw-plan" x1="1000" y1="235" x2="1045" y2="235"/>
        <path class="bp-draw-plan" d="M1000 290 A55 55 0 0 0 1045 235"/>

        <!-- Door bottom-left room -->
        <line class="bp-draw-plan" x1="830" y1="450" x2="830" y2="505" stroke="none"/>
        <line class="bp-draw-plan" x1="830" y1="505" x2="785" y2="505"/>
        <path class="bp-draw-plan" d="M830 450 A55 55 0 0 0 785 505"/>

        <!-- Door bottom-right from corridor -->
        <line class="bp-draw-plan" x1="960" y1="440" x2="960" y2="495" stroke="none"/>
        <line class="bp-draw-plan" x1="960" y1="495" x2="1005" y2="495"/>
        <path class="bp-draw-plan" d="M960 440 A55 55 0 0 0 1005 495"/>

        <!-- Entry door (bottom wall, thicker) -->
        <line class="bp-draw-plan" x1="720" y1="580" x2="780" y2="580" stroke="rgba(242,140,40,0.3)" stroke-width="1.5"/>
        <line class="bp-draw-plan" x1="720" y1="580" x2="720" y2="530"/>
        <path class="bp-draw-plan" d="M780 580 A60 60 0 0 1 720 530"/>
      </g>

      <!-- Windows in plan (double lines on walls) -->
      <g class="blueprint__plan-windows" stroke="rgba(242,140,40,0.2)" stroke-width="0.8" fill="none">
        <!-- Top wall windows -->
        <line class="bp-draw-plan" x1="680" y1="198" x2="780" y2="198" stroke-width="3"/>
        <line class="bp-draw-plan" x1="680" y1="203" x2="780" y2="203" stroke-width="1"/>
        <line class="bp-draw-plan" x1="870" y1="198" x2="960" y2="198" stroke-width="3"/>
        <line class="bp-draw-plan" x1="870" y1="203" x2="960" y2="203" stroke-width="1"/>
        <line class="bp-draw-plan" x1="1040" y1="198" x2="1100" y2="198" stroke-width="3"/>
        <line class="bp-draw-plan" x1="1040" y1="203" x2="1100" y2="203" stroke-width="1"/>
        <!-- Right wall windows -->
        <line class="bp-draw-plan" x1="1138" y1="260" x2="1138" y2="350" stroke-width="3"/>
        <line class="bp-draw-plan" x1="1143" y1="260" x2="1143" y2="350" stroke-width="1"/>
        <line class="bp-draw-plan" x1="1138" y1="440" x2="1138" y2="530" stroke-width="3"/>
        <line class="bp-draw-plan" x1="1143" y1="440" x2="1143" y2="530" stroke-width="1"/>
        <!-- Left wall window -->
        <line class="bp-draw-plan" x1="638" y1="440" x2="638" y2="530" stroke-width="3"/>
        <line class="bp-draw-plan" x1="633" y1="440" x2="633" y2="530" stroke-width="1"/>
      </g>

      <!-- Furniture / fixtures symbols -->
