        <line class="bp-draw" x1="147" y1="280" x2="147" y2="340"/>
        <rect class="bp-draw" x="420" y="280" width="55" height="60" rx="1"/>
        <line class="bp-draw" x1="447" y1="280" x2="447" y2="340"/>
