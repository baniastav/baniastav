        <line class="bp-draw-dim" x1="515" y1="600" x2="515" y2="620"/>
        <!-- Total height right -->
        <line class="bp-draw-dim" x1="555" y1="90" x2="555" y2="580"/>
        <line class="bp-draw-dim" x1="545" y1="90" x2="565" y2="90"/>
        <line class="bp-draw-dim" x1="545" y1="580" x2="565" y2="580"/>
        <!-- GF height -->
        <line class="bp-draw-dim" x1="40" y1="395" x2="40" y2="562"/>
        <line class="bp-draw-dim" x1="30" y1="395" x2="50" y2="395"/>
        <line class="bp-draw-dim" x1="30" y1="562" x2="50" y2="562"/>
        <!-- 1F height -->
        <line class="bp-draw-dim" x1="40" y1="230" x2="40" y2="385"/>
        <line class="bp-draw-dim" x1="30" y1="230" x2="50" y2="230"/>
        <line class="bp-draw-dim" x1="30" y1="385" x2="50" y2="385"/>
      </g>

      <!-- LEFT dimension text -->
      <g class="blueprint__text" fill="rgba(255,255,255,0.15)" font-family="Inter, monospace" font-size="11">
        <text class="bp-fade" x="270" y="628">12 600</text>
        <text class="bp-fade" x="535" y="350" transform="rotate(-90 535 350)">10 400</text>
        <text class="bp-fade" x="18" y="485" transform="rotate(-90 18 485)">2 800</text>
        <text class="bp-fade" x="18" y="315" transform="rotate(-90 18 315)">2 800</text>
      </g>

      <!-- Angle marker on roof -->
      <g class="blueprint__angle" stroke="rgba(242,140,40,0.18)" stroke-width="0.8" fill="none">
        <path class="bp-draw-dim" d="M295 90 L295 130"/>
        <path class="bp-draw-dim" d="M295 130 Q315 130 308 108" stroke-dasharray="3 2"/>
        <text class="bp-fade" x="305" y="128" fill="rgba(242,140,40,0.2)" font-family="Inter, monospace" font-size="10">38°</text>
      </g>

      <!-- ===================== RIGHT: Detailed floor plan ===================== -->
      <g class="blueprint__plan" stroke="rgba(255,255,255,0.12)" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round">
        <!-- Outer walls (thick) -->
        <rect class="bp-draw-plan" x="640" y="200" width="500" height="380" rx="2"/>
        <!-- Double line for wall thickness -->
        <rect class="bp-draw-plan" x="650" y="210" width="480" height="360" rx="1" stroke="rgba(255,255,255,0.06)"/>

        <!-- Main horizontal corridor wall -->
        <line class="bp-draw-plan" x1="640" y1="390" x2="1140" y2="390"/>
        <line class="bp-draw-plan" x1="650" y1="400" x2="1130" y2="400" stroke="rgba(255,255,255,0.06)"/>

        <!-- Vertical walls top half -->
