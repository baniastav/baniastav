      <!-- Room labels -->
      <g class="blueprint__labels" fill="rgba(255,255,255,0.1)" font-family="Inter, sans-serif" font-size="10" font-weight="500">
        <text class="bp-fade" x="700" y="270">KUCHYŇ</text>
        <text class="bp-fade" x="1040" y="240">LOŽNICE</text>
        <text class="bp-fade" x="900" y="300">SCHODY</text>
