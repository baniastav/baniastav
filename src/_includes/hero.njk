        <line class="bp-draw" x1="65" y1="580" x2="78" y2="593" stroke="rgba(255,255,255,0.08)"/>
        <line class="bp-draw" x1="85" y1="580" x2="98" y2="593" stroke="rgba(255,255,255,0.08)"/>
        <line class="bp-draw" x1="105" y1="580" x2="118" y2="593" stroke="rgba(255,255,255,0.08)"/>

        <!-- Ground floor outer walls -->
