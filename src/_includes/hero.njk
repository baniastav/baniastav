<section class="hero" id="hero">
  <div class="hero__parallax-bg"></div>
  <div class="hero__overlay"></div>
  <div class="container hero__content">
    <h1 class="hero__heading reveal fade-down">{{ site.heroHeading }}</h1>
    <p class="hero__subheading reveal fade-up" data-delay="200">{{ site.heroSubheading }}</p>
    <p class="hero__text reveal fade-up" data-delay="400">{{ site.heroText }}</p>
    <a href="#contact" class="btn btn--primary hero__cta reveal fade-up" data-delay="600">{{ site.heroCta }}</a>
  </div>
  <div class="hero__scroll-indicator">
    <span></span>
  </div>
</section>
