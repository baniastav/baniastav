        <text class="bp-fade" x="990" y="430">KOUPELNA</text>
        <text class="bp-fade" x="855" y="430">CHODBA</text>
      </g>

      <!-- Right plan dimensions -->
      <g class="blueprint__dims-plan" stroke="rgba(255,255,255,0.1)" stroke-width="0.7" stroke-dasharray="4 3">
        <!-- Width -->
        <line class="bp-draw-dim" x1="640" y1="608" x2="1140" y2="608"/>
