        <line class="bp-draw" x1="147" y1="445" x2="147" y2="510"/>
        <rect class="bp-draw" x="420" y="445" width="55" height="65" rx="1"/>
        <line class="bp-draw" x1="447" y1="445" x2="447" y2="510"/>
