        <line class="bp-draw" x1="337" y1="555" x2="337" y2="405" stroke="rgba(242,140,40,0.15)"/>
        <line class="bp-draw" x1="337" y1="405" x2="332" y2="415" stroke="rgba(242,140,40,0.15)"/>
        <line class="bp-draw" x1="337" y1="405" x2="342" y2="415" stroke="rgba(242,140,40,0.15)"/>
      </g>

      <!-- Attic detail -->
      <g class="blueprint__attic" stroke="rgba(242,140,40,0.15)" stroke-width="1" stroke-linecap="round">
