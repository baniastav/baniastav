        <!-- Toilet -->
        <ellipse class="bp-draw-plan" cx="1100" cy="500" rx="12" ry="16"/>
        <rect class="bp-draw-plan" x="1085" y="510" width="30" height="8" rx="4"/>
        <!-- Washbasin -->
        <rect class="bp-draw-plan" x="975" y="490" width="30" height="22" rx="6"/>

        <!-- Living room (bottom-left): sofa symbol -->
