        <!-- Kitchen (top-left): counter along walls -->
        <rect class="bp-draw-plan" x="658" y="218" width="160" height="15" rx="1"/>
        <rect class="bp-draw-plan" x="658" y="218" width="15" height="80" rx="1"/>
        <circle class="bp-draw-plan" cx="700" cy="225" r="4"/>
        <circle class="bp-draw-plan" cx="720" cy="225" r="4"/>
        <!-- Sink -->
        <rect class="bp-draw-plan" x="748" y="218" width="25" height="12" rx="3"/>

        <!-- Bathroom (bottom-right): tub + toilet + sink -->
