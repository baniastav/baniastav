        <!-- Table -->
        <ellipse class="bp-draw-plan" cx="720" cy="460" rx="30" ry="20"/>

        <!-- Bedroom (top-right): bed -->
        <rect class="bp-draw-plan" x="1020" y="250" width="90" height="110" rx="3"/>
        <rect class="bp-draw-plan" x="1025" y="253" width="80" height="25" rx="5"/>

        <!-- Staircase (top-middle room) -->
        <line class="bp-draw-plan" x1="850" y1="310" x2="980" y2="310"/>
        <line class="bp-draw-plan" x1="850" y1="370" x2="980" y2="370"/>
