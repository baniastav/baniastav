      <!-- Right plan dimension text -->
      <g class="blueprint__text-plan" fill="rgba(255,255,255,0.12)" font-family="Inter, monospace" font-size="10">
        <text class="bp-fade" x="865" y="625">14 200</text>
        <text class="bp-fade" x="1152" y="400" transform="rotate(-90 1152 400)">10 800</text>
