<section class="references section" id="references">
  <div class="container">
    <h2 class="section__title reveal fade-up">Naše reference</h2>
    <div class="references__grid">
      {% for ref in references %}
      <div class="ref-card reveal fade-up stagger" data-delay="{{ loop.index0 * 150 }}">
        <div class="ref-card__image-wrap">
          <div class="ref-card__image" style="background-image: url('{{ ref.image }}');" data-lightbox="{{ ref.image }}" data-caption="{{ ref.title }}">
            <div class="ref-card__overlay">
              <span class="ref-card__zoom">+ Zobrazit</span>
            </div>
          </div>
        </div>
        <div class="ref-card__body">
          <span class="ref-card__year">{{ ref.year }}</span>
          <h3 class="ref-card__title">{{ ref.title }}</h3>
          <p class="ref-card__text">{{ ref.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Lightbox -->
<div class="lightbox" id="lightbox" aria-hidden="true">
  <button class="lightbox__close" aria-label="Zavřít">&times;</button>
  <div class="lightbox__content">
    <img class="lightbox__img" src="" alt="">
    <p class="lightbox__caption"></p>
  </div>
  <button class="lightbox__prev" aria-label="Předchozí">&lsaquo;</button>
  <button class="lightbox__next" aria-label="Další">&rsaquo;</button>
</div>
